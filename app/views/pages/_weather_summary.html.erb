
<div class="weather-Dashboard">
    <% @json = plant.get_weather %>
    <% if @json %>
        <div class ="weather-temperature"><%= @json["main"]["temp"].to_d.round %>&deg;C</div>
        <div class="weather-sum">
            <div class ="weather-desc"><%= @json["weather"][0]["description"] %></div> 
            <div class = "weather-image"><img src="https://openweathermap.org/img/wn/<%= @json["weather"][0]["icon"] %>.png"></div> 
        </div>
    <div class="inline-wrapper hide_in_mobile">
            Max:<div class = "max-temp"><%= @json["main"]["temp_max"].to_d.round %>&deg;C</div>
    </div>
        <div class="inline-wrapper hide_in_mobile">
            Min: <div class = "min-temp"><%= @json["main"]["temp_min"].to_d.round %>&deg;C</div>
        </div>
    <% else %>
        <h3>NO LOCATION INFORMATION</h3>
    <% end %>
</div>